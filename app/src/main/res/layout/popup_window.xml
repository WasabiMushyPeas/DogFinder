<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#282a36">

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    >
    <TableRow>
        <TextView
            android:layout_column="1"
            android:textSize="20sp"
            android:text="Info: "></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Distance:"></TextView>
        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:id="@+id/location_text_view_distance"
            android:text="N/A"></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Battery:"></TextView>
        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="N/A"></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Dog Lat:"></TextView>
        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:id="@+id/location_text_view_dog_lat"
            android:text="N/A"></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Dog Lon:"></TextView>
        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:id="@+id/location_text_view_dog_long"
            android:text="N/A"></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="User Lat:"></TextView>
        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:id="@+id/location_text_view_user_lat"
            android:text="N/A"></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="User Lon:"></TextView>
        <TextView
            android:layout_column="2"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:id="@+id/location_text_view_user_long"
            android:text="N/A"></TextView>
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:id="@+id/location_button"
            android:text="Update Map"></Button>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:textSize="20sp"
            android:text="Offline Download: "></TextView>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Zoom:"></TextView>
        <EditText
            android:textSize="10sp"
            android:layout_column="2"
            android:id="@+id/zoom_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:inputType="text"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Lat:"></TextView>
        <EditText
            android:textSize="10sp"
            android:layout_column="2"
            android:id="@+id/lat_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="1"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:text="Long:"></TextView>
        <EditText
            android:textSize="10sp"
            android:layout_column="2"
            android:id="@+id/long_input"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"/>
    </TableRow>
    <TableRow>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:id="@+id/download_button"
            android:text="Download"></Button>

    </TableRow>
</TableLayout>
</RelativeLayout>